<div class="table_container">

  <div class="alert alert-success" role="alert"> <h4 style="text-align: center"> Booking Details </h4></div>

<table class="table table-bordered table-striped">
  <thead>
  <th> ID</th>
  <th> Booking ID</th>
  <th> status</th>
  <th> Customer Name</th>
  <th> Booking Date</th>
  <th> Booking Fee</th>
  <th> Security</th>
  <th> Total Charge</th>
  <th> Online Payment Done Charge</th>
  <th> Refunded Amount</th>
  <th> Pending Amount</th>
  <th> Final Settlement Paid amount </th>
  <th> </th>
  <th> </th>
  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
    <tr>
      <td> <%= booking.id %> </td>
      <td> <%= booking.booking_id %> </td>
      <td> <%= booking.status %> </td>
      <td> <%= booking.customer.name %> </td>
      <td> <%= booking.booking_time %> </td>
      <td> <%= booking.booking_fare.booking_fee %> </td>
      <td> <%= booking.booking_fare.security %> </td>
      <td> <%= booking.booking_fare.total_charge %> </td>
      <td> <%= booking.booking_fare.online_payment_done_amount %> </td>
      <td> <%= booking.booking_fare.refunded_amount %>
      <td> <%= booking.booking_fare.pending_amount %>
           <b class="refund_to_be_given"><%=  booking.booking_fare.pending_amount < 0 ? 'Refund' : '' %></b> </td>
      <td> <%= booking.booking_fare.final_settlement_paid_amount %> </td>
      <td>
        <%= link_to 'Payment Details', booking_booking_detail_path(booking_id: booking.booking_id) %>
      </td>
      <td>
        <%= link_to 'Edit', booking_edit_path(booking_id: booking.booking_id) %>
      </td>
    </tr>
  <% end %>
  </tbody>

</table>

  <p> <%= link_to 'New Booking', booking_new_path %> </p>

</div>